<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

</head>
<body>
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="/">Home</a>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link active" href="projects">Projects <span class="sr-only">(current)</span></a>
                        <a class="nav-item nav-link" href="contact">Contact</a>
                    </div>
                </div>
            </nav>

        </div>
        <div class="col"></div>
    </div>
     <div class="row " style="height: 100px;">
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col-8" style="text-align: center;">
            <h3></h3>
        </div>
        <div class="col"></div>
    </div>
    @* container here *@
    <div class="row">
        <div class="col-1"></div>
        <div class="col"style="border: 3px solid black">
            <div class="row " style="height: 100px;">
                <div class="col"></div>
            </div>
            <form action="userregister" method="POST">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-4">
                        <label for="name">Your Name:</label>
                        <br>
                        <label for="dojoLoc">Dojo Location:</label>
                        <br>
                        <label for="favLang">Favorite Language:</label>

                    </div>
                    <div class="col-2">
                        <input type="text" name="name" id="">
                        <br>
                        <select id="loca" name="dojoLoc">
                            <option value="Seattle">Seattle</option>
                            <option value="Orange County">Orange County</option>
                            <option value="Boise">Boise</option>
                            <option value="Burbank">Burbank</option>
                        </select>
                        <br>
                        <select id="langs" name="favLang">
                            <option value="C#">C#</option>
                            <option value="Python">Python</option>
                            <option value="JavaScript">JavaScript</option>
                            <option value="Java">Java</option>
                        </select>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col">
                        <h6>
                        <label for="message">Comment (optional)</label>
                        </h6>
                        <textarea name="message" id="" cols="90" rows="5"></textarea>
                    </div>
                    <div class="col"></div>
                </div>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="col-3"></div>
                    <div class="col">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                    <div class="col"></div>
                </div>
            </form>
        </div>
        <div class="col-1"></div>
    </div>
</body>
</html>